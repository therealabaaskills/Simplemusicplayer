<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/audioImage"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:src="@drawable/sound_track"
            android:layout_marginStart="15dp"
            app:tint="@color/teal_200" />

        <TextView
            android:id="@+id/songName"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:textAlignment="center"
            android:text="song1"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/songDuration"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:text="03:05"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/addToFavorite"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/fav_border"
                app:tint="@color/teal_700"
                android:contentDescription="string/audio_fav_icon"/>

            <ImageButton
                android:id="@+id/songsRecyclerViewPlayIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="play_icon_btn"
                android:src="@drawable/play_btn"
                app:tint="@color/teal_700" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>